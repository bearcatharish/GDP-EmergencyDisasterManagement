     url: '/updateReport',
     data: JSON.stringify({
        _id: x._id,
        location: x.location,
        incidentName: x.incidentName,
        levelOfImpact: x.levelOfImpact,
        userName: x.userName,
        contactNo: x.contactNo,
        createdAt: x.createdAt
    }),
     headers: {
         'Content-Type': 'application/json'
     }
 });
    $scope.editingData[x._id] = false;
};
}]);</script>
